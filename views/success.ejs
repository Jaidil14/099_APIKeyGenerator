<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Success - API Key Saved</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <div class="card success-card">
            <div class="success-icon">âœ…</div>
            <h1>API Key Saved Successfully!</h1>
            
            <div class="user-info">
                <h3>User Information</h3>
                <p><strong>Name:</strong> <%= firstName %> <%= lastName %></p>
                <p><strong>Email:</strong> <%= email %></p>
            </div>

            <div class="api-key-info">
                <h3>Your API Key</h3>
                <div class="api-key-box">
                    <code id="apiKeyText"><%= apiKey %></code>
                    <button type="button" class="btn-copy" onclick="copyApiKey()">
                        ðŸ“‹ Copy
                    </button>
                </div>
                <p class="expire-info">
                    <strong>Expires on:</strong> <%= expiredDate %>
                </p>
            </div>

            <div class="action-buttons">
                <a href="/" class="btn btn-primary">
                    ðŸ”‘ Generate Another Key
                </a>
            </div>
        </div>
    </div>

    <script>
        function copyApiKey() {
            const apiKeyText = document.getElementById('apiKeyText').innerText;
            navigator.clipboard.writeText(apiKeyText).then(() => {
                alert('API Key copied to clipboard!');
            }).catch(err => {
                console.error('Failed to copy:', err);
            });
        }
    </script>
</body>
</html>